<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/top_bar_settings"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@color/white_overlay" >
        
        <Button 
            android:id="@+id/logout_settings"
            android:layout_height="50dp"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:text="LOGOUT"
            android:textSize="40sp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/dark_button_selector"
            />
        
        <ImageButton
            android:id="@+id/back_button_settings"
            android:layout_width="70dp" 
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/back"
            />
        
        <ImageButton
            android:id="@+id/home_button_settings"
            android:layout_width="70dp" 
            android:layout_height="70dp"
            android:layout_toLeftOf="@id/back_button_settings"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/home"
            />
        
        <ImageButton
            android:id="@+id/shop_button_settings"
            android:layout_width="70dp" 
            android:layout_height="70dp"
            android:layout_toLeftOf="@id/home_button_settings"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/cart"
            />                          
    </RelativeLayout>    
<ListView 
    android:id="@android:id/list" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:layout_marginTop="30dp"
/>
    
</LinearLayout>